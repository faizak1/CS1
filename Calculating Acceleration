// Code to calculate acceleration 

#include <iostream>
using namespace std;
int main ()
{
   // variables
   double velocity0, velocity1;
   double time, acceleration; 

   // input
   cout << "Enter the starting velocity v0 (meters/sec) : ";
   cin  >> velocity0;
   cout << "  Enter the ending velocity v1 (meters/sec) : ";
   cin  >> velocity1;
   cout << "                             Enter the time : ";
   cin  >> time;

   // processing
   acceleration = (velocity1 - velocity0) / time;

   // output
   cout << "The average acceleration is " << acceleration << endl;

   return 0;
} 
