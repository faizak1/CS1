// 4 function calculator code

#include <iostream>
using namespace std;

int main ()
{
   // variables
   int num1, num2, answer;
   char ops;
   bool moreProcessing;

   // init 
   moreProcessing = true;
 
   // processing
   while (moreProcessing == true)
   {
      // input 
      cout << "Enter an equation or 0 X 0 to exit : ";
      cin  >> num1 >> ops >> num2;    
    
      switch (ops)
      {
         case 'x':
            if (num1 == 0 && ops == 'x' && num2 == 0)
            {
               moreProcessing = false;
            }
            else
            {
            answer = num1 * num2;
            cout << num1 << "  " << ops << "   " << num2 << "  =  " << answer << endl;
            }
         break;  
      }
   }
   
   return 0;
}  
